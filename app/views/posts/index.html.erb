<%# Hero section %>
 <section class="py-5 text-center container"> 
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Adoptable & Fosterable Cats on Oahu</h1>
        <p class="lead text-muted">Data via User submissions & Aggregated from multiple sources.</p>
        <p>
          <a href="/posts/new" class="btn btn-primary my-2">Submit a Cat for Adoption/Foster</a><br>
          <a href="#" class="btn btn-secondary my-2">View Available Resources</a><br>
           <a href="#" class="btn btn-primary my-2">View Lost Cat Gallery</a><br>
        </p>
      </div>
    </div>
  </section>

<%# Gallery Cards %>
<div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @posts.each do |post| %>
        <div class="col">
        <div class="card shadow-sm">
        <p><% if(post.picture.attached?) %>
         <image style="width: 100%;" src="<%=(url_for(post.picture)) %>">
          <% else %>
          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
          <rect width="100%" height="100%" fill="#55595c"/>
          <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
          </svg>
          <% end %>   
      <div class="card-body">
        <p class="card-text">
        <%= post.title %>
      </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to "View", post_path(post), :class => 'btn btn-sm btn-outline-secondary' %>
          </div>
          <small class="text-muted">1 minute</small>
        </div>
        </div>
      </div>
     </div>
        <% end %> 
    </div>
  </div>
</div>
       

      